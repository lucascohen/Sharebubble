<!DOCTYPE html>
<html>
<head>
  <title>ShareBubble</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a href="#" class="brand">ShareBubble</a>
					<ul class="nav">
						<li><%= link_to "All Bubbles", root_path %></li>
						<li><%= link_to "New Bubble", new_bubble_path %></li>
						<li><%= render 'layouts/user_widget' %></li>
				</div>
			</div>
	</div>
	<div class="container"> 
			<p class="notice"><%= notice %></p>
    	<p class="alert"><%= alert %></p>

<%= yield %>


</body>
</html>
